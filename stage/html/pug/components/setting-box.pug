.setting-box.hide-settings
  .toggle-settings
    i.fa-solid.fa-gear.fa-lg.gear-icon
  .setting-content
    .option-box.color-options.text-center
      h4.option-title Color Options
      - var themes=["green-theme", "blue-theme", "red-theme","orange-theme", "purple-theme"]
      ul.list-unstyled
        each theme in themes
          li(data-theme= theme)
    .option-box.font-options.text-center
      h4.option-title Font Options
      - var fonts={"roboto":"Roboto","playfair-display" : "Playfair Display","sono" : "Sono","open-sans" : "Open sans"}
      select.form-control
        each font, key in fonts
          option(value= key)= font +" Font"
    .option-box.text-center
    h4.option-title Sidebar Options